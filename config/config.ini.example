# Pi5 Heizungs Messer - Konfiguration
# =====================================

[hardware]
# DS18B20 1-Wire Temperatursensoren
ds18b20_enabled = true
# Komma-getrennte Liste der Sensor-IDs (leer = auto-detect)
ds18b20_sensors = 

# DHT22 Temperatur/Luftfeuchtigkeit
dht22_enabled = true
dht22_gpio = 17

[database]
# InfluxDB Einstellungen
host = localhost
port = 8086
token = pi5-token-2024
org = pi5org
bucket = sensors

[mqtt]
# MQTT Broker (Home Assistant)
broker = 192.168.1.100
port = 1883
username = homeassistant
password = mqtt_password
topic_prefix = pi5_heizung

[homeassistant]
# Home Assistant Integration
ip = 192.168.1.100
mqtt_discovery = true

[labels]
# Sensor Beschriftungen für Home Assistant
# Format: sensor_id = Anzeigename
# Beispiele:
# 28-0000000001 = HK1 Vorlauf
# 28-0000000002 = HK1 Rücklauf
# 28-0000000003 = HK2 Vorlauf
# 28-0000000004 = HK2 Rücklauf
# dht22 = Heizraum

[logging]
# Logging Konfiguration
level = INFO
file = /home/pi/pi5-sensors/sensor_reader.log
max_bytes = 10485760
backup_count = 5
